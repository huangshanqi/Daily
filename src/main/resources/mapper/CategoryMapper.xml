<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsq.daily.dao.CategoryDao">

	<resultMap type="Category" id="CATEGORY_MAP">
		<id property="id" column="id" />
		<result property="name" column="name" />
	</resultMap>

	<insert id="create" parameterType="Category" keyProperty="id"
		useGeneratedKeys="true">
		insert into
		category(name)
		values(#{name})
	</insert>

	<select id="findById" parameterType="int" resultMap="CATEGORY_MAP">
		select *
		from category
		where id = #{id}
		limit 1
	</select>

	<delete id="deleteById" parameterType="int">
		delete from category
		where id = #{id}
	</delete>
	
	<select id="getAllCategory" resultMap="CATEGORY_MAP">
	select *
	from category
	</select>
	
	<select id="getByName" parameterType="String" resultMap="CATEGORY_MAP">
	select * from category
	where name = #{name}
	limit 1
	</select>
</mapper>