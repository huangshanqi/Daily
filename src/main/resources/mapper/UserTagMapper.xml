<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsq.daily.dao.UserTagDao">

	<resultMap type="UserTag" id="USER_TAG_MAP">
		<id property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="tagId" column="tag_id" />
	</resultMap>

	<insert id="create" parameterType="UserTag" keyProperty="id"
		useGeneratedKeys="true">
		insert into
		user_tag(user_id,tag_id)
		values(#{userId},#{tagId})
	</insert>

	<select id="findById" parameterType="int" resultMap="USER_TAG_MAP">
		select *
		from user_tag
		where id = #{id}
		limit 1
	</select>

	<delete id="deleteById" parameterType="int">
		delete from user_tag
		where id = #{id}
	</delete>

	<select id="getUserAllCategory" resultMap="USER_TAG_MAP"
		parameterType="String">
		select *
		from user_tag
		where user_id = #{userId}
	</select>

	<delete id="deleteUserTag" parameterType="UserTag">
		delete from user_tag
		where user_id = #{userId} and tag_id = #{tagId}
	</delete>

</mapper>