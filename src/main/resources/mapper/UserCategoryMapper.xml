<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsq.daily.dao.UserCategoryDao">

	<resultMap type="UserCategory" id="USER_CATEGORY_MAP">
		<id property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="categoryId" column="category_id" />
	</resultMap>

	<insert id="create" parameterType="UserCategory" keyProperty="id"
		useGeneratedKeys="true">
		insert into
		user_category(user_id,category_id)
		values(#{userId},#{categoryId})
	</insert>

	<select id="findById" parameterType="int" resultMap="USER_CATEGORY_MAP">
		select *
		from user_category
		where id = #{id}
		limit 1
	</select>

	<delete id="deleteById" parameterType="int">
		delete from user_category
		where id = #{id}
	</delete>

	<select id="getUserAllCategory" resultMap="USER_CATEGORY_MAP"
		parameterType="String">
		select *
		from user_category
		where user_id = #{userId}
	</select>

	<delete id="deleteUserCategory" parameterType="UserCategory">
		delete from user_category
		where user_id = #{userId} and category_id = #{categoryId}
	</delete>

</mapper>